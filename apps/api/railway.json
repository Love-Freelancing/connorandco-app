{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/api/Dockerfile"
  },
  "deploy": {
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "deploymentOverlapSeconds": 30,
    "drainingSeconds": 15,
    "region": "us-east4-eqdc4a",
    "numReplicas": 1
  },
  "environments": {
    "staging": {
      "deploy": {
        "region": "us-east4-eqdc4a",
        "numReplicas": 1
      }
    }
  }
}
